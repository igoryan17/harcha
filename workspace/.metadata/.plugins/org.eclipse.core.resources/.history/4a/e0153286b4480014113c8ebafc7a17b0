#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <string.h>
#include <sys/wait.h>
#include <fcntl.h>
#include <assert.h>
int main(int argc, char *argv[])
{
	int pipefd[2];
	unsigned i;
	pipe(pipefd);
	pid_t my_pid = fork();
	char buf[1024];

if (my_pid > 0) { //parent
	close(pipefd[0]);
	size_t len;
	for (i = 1; i < argc; i++)
	{
		len = strlen(argv[i]);
	write(pipefd[1], &len, sizeof(len));
	write(pipefd[1], argv[i], len);
	len = 0;
	write(pipefd[1], len, sizeof(len));
	}
				}

/* else	{ //child

close(pipefd[1]);
size_t len;
	while (1)
	{
	if ( len == 0)
			break;
	read(pipefd[0], buf, len);

	}

read(pipefd[0], &len, sizeof(len));
read(pipefd[0], argv[i], len);
buf[len]=0;
		}
*/
else {            /* Parent writes argv[1] to pipe */
               close(pipefd[0]);          /* Close unused read end */
               write(pipefd[1], argv[1], strlen(argv[1]));
               close(pipefd[1]);          /* Reader will see EOF */
               wait(NULL);                /* Wait for child */
               exit(EXIT_SUCCESS);
           }

	return 0;
}






